                    <Border Grid.Column="0" Background="{StaticResource AccentPurple}" CornerRadius="3,0,0,3"/>
                    <Border Grid.Column="1" Background="{StaticResource AccentAmber}"/>
                    <Border Grid.Column="2" Background="{StaticResource AccentSlate}" CornerRadius="0,3,3,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
